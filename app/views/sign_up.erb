<form class="form-position" action="/sign_up" method="POST">
 <div class="mx-auto col-9 col-md-7 col-lg-5 my-5">
    <h1 class="h3 mb-3 fw-normal">Sign up for free</h1>

    <div class="form-floating mb-3">
      <input name="user[full_name]" type="text" class="form-control" id="floatingInput" placeholder="name@example.com" value="<%= @user.full_name %>" autocomplete="on">
      <label for="floatingInput">Username:</label>
    </div>

    <%= erb_response 'form_user'.to_sym %>

    <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>
    <small class="text-body-secondary">* :By clicking Sign up, you agree to the terms of use.</small>
  </div>
</form>
